{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "baseUrl": ".",
    "removeComments": true,
    "noLib": false,
    "paths": {
      "App": ["src/app"],
      "App/*": ["src/app/*"],
      "Routes": ["src/app/Routes"],
      "Routes/*": ["src/app/Routes/*"],
      "Contexts": ["src/app/Contexts"],
      "Contexts/*": ["src/app/Contexts/*"],
      "Config": ["src/config"],
      "Config/*": ["src/config/*"],
      "Interfaces": ["src/interfaces"],
      "Interfaces/*": ["src/interfaces/*"],
      "Public": ["src/public"],
      "Public/*": ["src/public/*"],
      "Tests": ["src/tests"],
      "Tests/*": ["src/tests/*"],
      "Utils": ["src/utils"],
      "Utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
